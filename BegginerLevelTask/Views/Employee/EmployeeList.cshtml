@model IEnumerable<BegginerLevelTask.Context.Employee>
@{
    ViewBag.Title = "EmployeeList";
}
<style>
    div.btn-primary {
        right: 5px;
    }
</style>
<style>
    th {
        color: white;
        background: black;
    }

    td {
        color: black;
        background: white;
    }
</style>
<br />
<h2 class="text-center text-uppercase"><strong><u>Employee List</u></strong></h2>
<hr /><br />
<a href="@Url.Action("Employee", new { @class = "create" })" class="btn btn-primary">Add Employee</a>
<a href="@Url.Action("ReviewCreationList","ReviewCreation", new { @class = "create" })" class="btn btn-primary">Review List</a>
<br />
<br />
<div class="container-flex">
    <div class="table-wrapper-scroll-x my-custom-scrollbar">
        <table class="table table-hover table-bordered">
            <thead class="bg-dark text-white">
                <tr>
                    <th style="text-align:center;">First Name</th>
                    <th style="text-align:center;">Last Name</th>
                    <th style="text-align:center;">DOB</th>
                    <th style="text-align:center;">Gender</th>
                    <th style="text-align:center;">Designation</th>
                    <th style="text-align:center;">DOJ</th>
                    <th style="text-align:center;">Department</th>
                    <th style="text-align:center;">Address</th>
                    <th style="text-align:center;">Employee Type</th>        @*Status for the person currently active or not*@
                    <th style="text-align:center;">Phone Number</th>
                    <th style="text-align:center;">Email</th>
                    <th style="text-align:center;">Status</th>
                    <th style="text-align:center;">Username</th>
                    <th style="text-align:center;">Action</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr style="text-align:center;">
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@(item.DOB.HasValue ? item.DOB.Value.ToString("MM/dd/yyyy") : "--/--/----")</td>
                    <td>@item.Gender</td>
                    <td>@item.DesignationEmp</td>
                    <td>@(item.DOJ.HasValue ? item.DOJ.Value.ToString("MM/dd/yyyy") : "--/--/----")</td>
                    <td>@item.DepartmentEmp</td>
                    <td>@item.AddressEmp</td>
                    <td>@item.EmployeeType</td>
                    <td>@item.PhoneNumEmp</td>
                    <td>@item.EmailEmp</td>
                    <td>@item.Status</td>
                    <td>@item.UserNameEmp</td>
                    <td>
                        @*<a href="#"><i class="glyphicon glyphicon-pencil"></i></a>
                            <a href="#"><i class="glyphicon glyphicon-trash"></i></a>*@
                        @Html.ActionLink("Edit", "EditEmployee", new
                   {
                       item.EmployeeID,
                       item.FirstName,
                       item.LastName,
                       item.DOB,
                       item.Gender,
                       item.DesignationEmp,
                       item.DOJ,
                       item.DepartmentEmp,
                       item.AddressEmp,
                       item.EmployeeType,
                       item.PhoneNumEmp,
                       item.EmailEmp,
                       item.Status,
                       item.UserNameEmp,
                       item.PasswordEmp
                   }, new { onclick = "return confirm('Are you sure you want to EDIT?');", @class = "btn btn-success" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID },
                       new { onclick = "return confirm('Are you sure you want to DELETE?');", @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>