@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li style="margin-top: 15px; color: white;">@ViewBag.Welcome<strong>@ViewBag.Displayname &nbsp;</strong></li>
        @*<li>@Html.ActionLink("Register", "Organisation", "Organisation", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>*@
        @*<li>@Html.ActionLink("Log in", "MagicLogin", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>*@
        @*<li>@Html.ActionLink("Employee Log in", "EmployeeLogin", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>*@
        <li>@Html.ActionLink("Log out", "MagicLogin", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
