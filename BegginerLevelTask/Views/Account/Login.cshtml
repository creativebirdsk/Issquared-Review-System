@model BegginerLevelTask.Context.tbl_Organisation
@{
    ViewBag.Title = "OrgLogin";
}

<h2 class="text-center text-uppercase"><strong><u>Login</u></strong></h2>

<hr class="line" />

<br />
@using (Html.BeginForm("Login", "Account", "", FormMethod.Post))
{
    @*@Html.AntiForgeryToken()*@
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-lg-2 control-label">User Name</label>
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.UserName, new { @id = "Username", @class = "form-control" })
                @*@Html.ValidationMessageFor(x => x.UserName, "", new { @class = "error" })*@
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Password, new { @class = "col-lg-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                @*@Html.ValidationMessageFor(x => x.Password, "", new { @class = "error" })*@
            </div>
        </div>
    </div>
    <div class="form-group" style="margin-left:290px">
        <button type="submit" class="btn btn-primary">SUBMIT</button>
    </div>

}