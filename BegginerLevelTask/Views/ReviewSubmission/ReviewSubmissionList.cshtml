@model IEnumerable<BegginerLevelTask.Context.ReviewAssignment>
@{
    ViewBag.Title = "ReviewSubmissionList";
}

<style>
th{
  color: white;
  background: black;
}
td {
  color: black;
  background: white;
    }
</style>
<br />
<h2 class="text-center text-uppercase"><strong><u>Reviews Assigned</u></strong></h2>
<hr /><br />
<a href="@Url.Action("SubmittedList", new { @class = "create" })" class="btn btn-primary">Submitted List</a>
<br /><br/>
<div class="table-wrapper-scroll-x my-custom-scrollbar">
    <table class="table table-striped table-bordered">
        <thead class="bg-dark text-white">
            <tr>
                <th style="text-align:center;">Agenda</th>
                <th style="text-align:center;">Employee To be Reviewed</th>
                <th style="text-align:center;">Reviewer</th>
                <th style="text-align:center;">Action</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr style="text-align:center;">
                <td>@Html.DisplayFor(modelItem => item.ReviewCreation.ReviewAgenda)</td>
                <td>@Html.DisplayFor(modelItem => item.Employee.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.Employee1.FirstName)</td>
                <td>@Html.ActionLink("Review", "ReviewSubmission", new { id = item.ReviewAssignmentID }, new { @class = "btn btn-primary" })</td>
            </tr>
        }
    </table>
</div>

