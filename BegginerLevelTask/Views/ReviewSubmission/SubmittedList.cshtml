@model IEnumerable<BegginerLevelTask.Context.ReviewSubmission>
@{
    ViewBag.Title = "SubmittedList";
}

<style>
    th {
        color: white;
        background: black;
    }

    td {
        color: black;
        background: white;
    }
</style>
<br />
<h2 class="text-center text-uppercase"><strong><u>Submitted Reviews</u></strong></h2>
<hr /><br />
<a href="@Url.Action("ReviewSubmissionList",  new { @class = "create" })" class="btn btn-primary">Reviews Assigned</a>
<br />
<br />
<div class="table-wrapper-scroll-x my-custom-scrollbar">
    <table class="table table-striped table-bordered">
        <thead class="bg-dark text-white">
            <tr>
                <th style="text-align:center;">Agenda</th>
                <th style="text-align:center;">Employee To be Reviewed</th>
                <th style="text-align:center;">Rating</th>
                <th style="text-align:center;">Feedback</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr style="text-align:center;">
                <td>@Html.DisplayFor(modelItem => item.ReviewCreation.ReviewAgenda)</td>
                <td>@Html.DisplayFor(modelItem => item.Employee11.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                <td>@Html.DisplayFor(modelItem => item.Feedback)</td>
            </tr>
        }
    </table>
</div>

